Ejemplos
const
Nombre_fichero = 'texto.txt';
var
fichero : text;
begin
assign(fichero, Nombre_fichero); // Ponemos nombre al fichero
reset(fichero); // Lo abrimos en modo lectura
procesa_fichero(fichero);
close(fichero); // Cerramos el fichero
end.
