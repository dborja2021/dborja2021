{$mode objfpc}{$H-}{$R+}{$T+}{$Q+}{$V+}{$D+}{$X-}{$warnings on}
program lectura_03;
procedure procesa_linea(linea:string);
begin
writeln(linea);
end;
procedure procesa_fichero(var fichero:text);
var
linea: string;
begin
while not eof(fichero) do
begin
readln(fichero, linea);
procesa_linea(linea);
end;
end;
